<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>CustomerListServlet</servlet-name>
  	<display-name>CustomerListServlet</display-name>
  	<description></description>
  	<servlet-class>com.customer.view.CustomerListServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddCustomerServlet</servlet-name>
  	<display-name>AddCustomerServlet</display-name>
  	<description></description>
  	<servlet-class>com.customer.controller.AddCustomerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ErrorServlet</servlet-name>
  	<display-name>ErrorServlet</display-name>
  	<description></description>
  	<servlet-class>com.customer.view.ErrorServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SuccessServlet</servlet-name>
  	<display-name>SuccessServlet</display-name>
  	<description></description>
  	<servlet-class>com.customer.view.SuccessServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>addCustomerServlet</servlet-name>
  	<display-name>addCustomerServlet</display-name>
  	<description></description>
  	<servlet-class>com.customer.view.addCustomerServlet</servlet-class>
  	<init-param>
		
		<param-name>customer-list</param-name>
		<param-value>Unknown, Normal, Corporate</param-value>
		
		</init-param>
  	
  </servlet>
 
  <servlet>
  	<servlet-name>DeletecustomerServlet</servlet-name>
  	<display-name>DeletecustomerServlet</display-name>
  	<description></description>
  	<servlet-class>com.customer.controller.DeletecustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CustomerListServlet</servlet-name>
  	<url-pattern>/customer_list.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddCustomerServlet</servlet-name>
  	<url-pattern>/add_customer.controller</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ErrorServlet</servlet-name>
  	<url-pattern>/error.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SuccessServlet</servlet-name>
  	<url-pattern>/success.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>addCustomerServlet</servlet-name>
  	<url-pattern>/add_customer_servlet.view</url-pattern>
  </servlet-mapping>
 
  <servlet-mapping>
  	<servlet-name>DeletecustomerServlet</servlet-name>
  	<url-pattern>/deletecustomer.controller</url-pattern>
  </servlet-mapping>
  <welcome-file-list>

		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
